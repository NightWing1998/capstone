{
    "kind": "ReplicationController",
    "apiVersion": "v1",
    "metadata": {
        "name": "blue",
        "labels": {
            "app": "blue"
        }
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "app": "blue"
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "blue"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "blue",
                        "image": "913924799393.dkr.ecr.us-east-1.amazonaws.com/capstone_blue",
                        "ports": [
                            {
                                "name": "http-server",
                                "containerPort": 80
                            }
                        ]
                    }
                ],
                "imagePullSecrets": [{
                    "name": "regcred"
                }]
            }
        }
    }
}